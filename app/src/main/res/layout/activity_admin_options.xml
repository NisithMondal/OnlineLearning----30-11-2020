<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AdminOptionsActivity">

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Write Question and Answer"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:padding="15dp"
        android:textStyle="bold"
        android:background="@drawable/text_view_background"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/edit_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Edit Question and Answer"
        android:layout_below="@+id/question_text_view"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:padding="15dp"
        android:background="@drawable/text_view_background_blue"
        android:layout_margin="10dp"
        />

</RelativeLayout>