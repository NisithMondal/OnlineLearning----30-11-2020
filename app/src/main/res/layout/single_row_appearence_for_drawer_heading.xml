<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginTop="2dp"
    android:id="@+id/root_view"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/type_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingStart="12dp"
            android:paddingEnd="8dp"
            android:paddingTop="20dp"
            android:layout_toEndOf="@+id/type_image_view"
            android:layout_toStartOf="@+id/edit_image_view"
            />

        <EditText
            android:id="@+id/update_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view"
            android:layout_toStartOf="@+id/save_button"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/type_image_view"
            android:visibility="visible"
            />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:layout_toStartOf="@+id/delete_image_view"
            android:layout_below="@+id/text_view"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/edit_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/delete_image_view"
            android:layout_below="@+id/edit_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>