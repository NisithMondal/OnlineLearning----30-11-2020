<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginTop="2dp"
    android:id="@+id/root_view"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question. "
            android:textSize="15sp"
            android:textColor="#ee00aa"
            android:paddingTop="7dp"
            android:paddingStart="5dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is Programming Languages?"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_toEndOf="@+id/text_view"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="5dp"
            />


        <TextView
            android:id="@+id/text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer: "
            android:textSize="15sp"
            android:textColor="#00796B"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/text_view"
            />

        <TextView
            android:id="@+id/answer_text_view"
            android:layout_below="@+id/question_text_view"
            android:layout_toEndOf="@+id/text_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Programming Languages is a language hello hello hello hello hello hello hello hello  which is depend on different factors."
            android:textSize="14sp"
            android:textColor="#5A5858"
            android:paddingStart="15dp"
            android:paddingEnd="5dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>