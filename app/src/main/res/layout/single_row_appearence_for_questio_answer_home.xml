<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginTop="2dp"
    app:cardElevation="10dp"
    android:id="@+id/root_view"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relative_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/question_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q) "
            android:textSize="15sp"
            android:textColor="#ee00aa"
            android:paddingTop="12dp"
            android:paddingStart="8dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/question_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is Programming Languages? How you can implement it."
            android:textSize="15sp"
            android:textColor="#00796B"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingEnd="8dp"
            android:layout_toEndOf="@+id/question_number_text_view"
            android:paddingStart="3dp"
            />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout2"
        android:layout_below="@+id/relative_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer :"
            android:textSize="15sp"
            android:textColor="#F57C00"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/answer_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view1"
            android:text="Programming Languages is a language hello hello hello hello hello hello hello hello  which is depend on different factors."
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="1dp"
            />
    </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>